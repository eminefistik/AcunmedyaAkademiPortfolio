@model List<AcunmedyaAkademiPortfolio.Models.TblMessage>
<!-- Section Title -->
<div class="container section-title" data-aos="fade-up">
    <h2>İletişim</h2>
    <p>Benimle iletişime geçmek için aşağıdaki formu doldurabilirsiniz.</p>
</div><!-- End Section Title -->

<div class="container" data-aos="fade" data-aos-delay="100">

    <div class="row gy-4">

        <div class="col-lg-4">
            <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="200">
                <i class="bi bi-geo-alt flex-shrink-0"></i>
                <div>
                    <h3>Adres</h3>
                    <p>Güngören,İstanbul</p>
                </div>
            </div><!-- End Info Item -->

            <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="300">
                <i class="bi bi-telephone flex-shrink-0"></i>
                <div>
                    <h3>Telefon</h3>
                    <p>+90 555 555 55 55</p>
                </div>
            </div><!-- End Info Item -->

            <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="400">
                <i class="bi bi-envelope flex-shrink-0"></i>
                <div>
                    <h3>E-Posta</h3>
                    <p>eminefistik2734@gmail.com</p>
                </div>
            </div><!-- End Info Item -->

        </div>

        <div class="col-lg-8">
            @foreach (var item in Model) {
        <form action="forms/contact.php" method="post" class="php-email-form" data-aos="fade-up" data-aos-delay="200">
            <div class="row gy-4">

                <div class="col-md-6">
                    <input type="text" name="@item.SenderName" class="form-control" placeholder="Adınız Soyadınız" required="">
                </div>

                <div class="col-md-6 ">
                    <input type="email" class="form-control" name="@item.SenderEmail" placeholder="E-Mail" required="">
                </div>

                <div class="col-md-12">
                    <input type="text" class="form-control" name="@item.Subject" placeholder="Konu Başlığı" required="">
                </div>

                <div class="col-md-12">
                    <textarea class="form-control" name="@item.Detail" rows="6" placeholder="Açıklama" required=""></textarea>
                </div>

                <div class="col-md-12 text-center">
                    <div class="loading">Loading</div>
                    <div class="error-message"></div>
                    <div class="sent-message">Your message has been sent. Thank you!</div>

                    <button type="submit">Mesaj Gönder</button>
                </div>

            </div>
        </form>
            }
        </div><!-- End Contact Form -->

    </div>
</div>